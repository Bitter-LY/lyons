{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [],
    "types": ["node"],
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@canvas2d/*": ["packages/*/src"],
      "canvas2d": ["packages/canvas2d/src"]
    }
  },
  "include": ["packages/global.d.ts", "packages/*/src"]
}
